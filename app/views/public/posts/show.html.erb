<!--ユーザ側／投稿詳細画面-->
<div class='container py-5'>
  <div class='row'>

    <!--プロフィール-->
    <div class="col-md-4">
    </div>

    <!--投稿詳細-->
    <div class="col-md-8 bg-light rounded-lg">
      <h2 class="title">
        <i class="fas fa-image"></i>投稿詳細
      </h2>
      <div class="row">
        <div class="col-md-5">
          <%= image_tag @post.get_image(250,250) %>
          <% unless @post.quantity == 0 %>
            <p>断捨離した数は <strong><%= @post.quantity %></strong> です</p>
          <% end %>
        </div>
        <div class="col-md-7">
          <div class="postdetail-name">
            <h4><%= @post.name %></h4>
            <div>
              <span class="fontawesome-button" id="favorite_btn_<%= @post.id %>">
                <%= render "public/favorites/btn", posts: @post %>
              </span>
              <% if @post.user == current_user %>
                <%= link_to edit_post_path(@post), class: "text-success fontawesome-button" do %>
                  <i class="fas fa-pen"></i>
                <% end %>
                <%= link_to post_path(@post), method: :delete, data: { confirm: "「#{@post.name.truncate(10)}」を本当に削除しますか？" }, class: "text-danger fontawesome-button" do  %>
                  <i class="fas fa-trash-can"></i>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="text-break rounded-lg py-1 px-2">
            <%= @post.caption %>
          </div>
        </div>
      </div>

      <!--お気に入り機能-->
      <div class="row">
        
      </div>

      <!--コメント機能-->
      <div class="row">
        <div class="col">
          <p>コメント件数：<%= @post.post_comments.count %></p>
          <% @post.post_comments.each do |post_comment| %>
            <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
            <%= post_comment.user.name %>
            <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
            <% if post_comment.user == current_user %>
              <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
            <% end %>
          <% end %>
        </div>
        <div class="col">
        <%= form_with model: [@post, @post_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
