<!--ユーザ側／投稿詳細画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-md-4">
    </div>

    <div class="col-md-8 bg-light rounded-lg">
      <h3 class="title">投稿詳細</h3>
      <div class="row d-flex">
        <div>
          <%= image_tag @posts.get_image(250,250) %>
        </div>
        <div>
          <%= @posts.name %>
          <p>断捨離した数「<%= @posts.quantity %>」</p>
          <%= @posts.intoduction %>
        </div>
      </div>
    </div>
    
  </div>
</div>
 