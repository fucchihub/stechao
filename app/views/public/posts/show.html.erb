<!--ユーザ側／投稿詳細画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-md-4">
    </div>

    <div class="col-md-8 bg-light rounded-lg">
      <h2 class="title">投稿詳細</h2>
      
      <div class="row">
        <div class="col-5">
          <%= image_tag @post.get_image(250,250) %>
          <% unless @post.quantity == 0 %>
            <p>断捨離した数は <strong><%= @post.quantity %></strong> です</p>
          <% end %>
        </div>
        
        <div class="col-7">
          <h4 class="title"><%= @post.name %></h4>
          <div class="caption-area">
            <%= @post.caption %>
          </div>
        </div>

        
      <% if @post.user == current_user %>
        <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "「#{@post.name.truncate(10)}」を削除しますか？"}, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>

  </div>
</div>
