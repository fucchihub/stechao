<!--public/posts/filter_by_date_form（パーシャル）-->
<div class="text-left px-3 pb-3 mb-4">
  <p>◆日付指定して投稿を絞り込む</p>
  <%= form_with url: filter_by_date_posts_path, method: :get do |f| %>
    <%# if params["order"] %>
    <%#= f.hidden_field :order, value: params[:order] %>
    <%# end %>
    <div class="form-group">
      <div class="row text-right">
        <div class="col-md-3 mb-4">
          <%= f.select 'search_type', options_for_select([['投稿日', 'created_at'], ['最終更新日', 'updated_at']], params[:search_type]), {}, class: 'form-control' %>
        </div>
        <div class="col-md-4">
          <%= f.date_field :start_date, value: params[:start_date], placeholder: "開始", class: "form-control" %>
          <%= f.label :start_date, "から" %>
        </div>
        <div class="col-md-4">
          <%= f.date_field :end_date, value: params[:end_date], placeholder: "終了", class: "form-control" %>
          <%= f.label :end_date, "まで" %>
        </div>
        <div class="col-md-1">
          <%= f.submit "検索", class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>