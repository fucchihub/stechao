<!--public/posts/filter_by_date_form（パーシャル）-->
<div class="text-left border-bottom px-3 pb-3 mb-4">
  <p>◆日付指定して投稿を絞り込む</p>
  <%= form_with url: filter_by_date_posts_path, method: :get do |f| %>
    <div class="form-group">
      <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
          <%= f.select 'search_type', options_for_select([['投稿日', 'created_at'], ['最終更新日', 'updated_at']], params[:search_type]), {}, class: 'form-control' %>
        </div>

        <div class="col-md-4">
          <%= f.date_field :starting_date, value: params[:starting_date], class: "form-control" %>
          <div class="text-right">から</div>
        </div>

        <div class="col-md-4">
          <%= f.date_field :ending_date, value: params[:ending_date], class: "form-control" %>
          <div class="text-right">まで</div>
        </div>

      </div>
      <div class="text-right mt-2">
        <%= f.submit "検索", class: "btn btn-sm btn-success" %>
      </div>
    </div>
  <% end %>
</div>