<!--ユーザ側／ハッシュタグ検索結果画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">

      <h2 class="mb-4">#<%= @hashtag.name %></h2>
      
      <!--投稿並び替えボタン-->
      <div class="text-left px-3 pb-3 mb-4">
        <%= link_to '新しい順', hashtag_posts_path(name: @hashtag.name, latest: "true") %>
        | <%= link_to '古い順', hashtag_posts_path(name: @hashtag.name, old: "true") %>
        | <%= link_to 'お気に入りが多い順', hashtag_posts_path(name: @hashtag.name, most_favorites: "true") %>
      </div>

      <!--ハッシュタグ検索結果一覧-->
      <%= render "public/posts/index", posts: @posts %>
      
    </div>
  </div>
</div>