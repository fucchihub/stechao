<!--ユーザ側／投稿一覧画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-md-4">
    </div>

    <div class="col-md-8">
      <h2 class="title">
        <i class="fas fa-image"></i>投稿一覧
      </h2>
      <div class="row">
        <% @posts.each do |posts| %>
          <div class="col-3">
            <%= link_to post_path(posts), class:"text-decoration-none text-dark" do %>
              <div class="card m-3">
                <%= image_tag posts.get_image(150,150) %>
                <div class="card-body">
                  <p class="card-text">
                    <%= posts.name %><br>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>