<!--ユーザ側／トップページ-->
<div id="#top-background" class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <div class="rounded-lg border p-5">
        <h2 class="mb-4">ログイン</h2>

        <%= form_with model: @user, url: user_session_path, method: :post do |f| %>
          <%= render "public/shared/error_messages", resource: @user %>

          <div class="form-group">
            <%= f.label :name, "ユーザー名" %><br>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード(6字以上)" %><br>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

           <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

          <div class="form-group text-center">
            <%= f.submit "ログイン", class: "btn btn-success" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= link_to "新規登録はこちら", new_user_registration_path %>
        </div>
      </div>

    </div>
  </div>
</div>