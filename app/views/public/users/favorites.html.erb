<!--ユーザ側／お気に入り一覧画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">

      <h2 class="mb-4"><%= current_user.name %>のお気に入り</h2>
      <div class="row">
        <% @favorite_posts.each do |posts| %>
          <div class="col-4">
            <%= link_to post_path(posts) do %>
              <div class="card shadow p-1 mx-1 mb-4">
                <div class="p-1">
                  <p class="card-text">
                    <%= image_tag posts.user.get_profile_image(30,30), class: "rounded-circle" %>
                    <%= link_to post_path(posts) do %>
                      <i class="fas fa-comment"></i>
                      <%= posts.post_comments.count %>
                    <% end %>
                    <span id="favorite_btn_<%= posts.id %>">
                      <%= render "public/favorites/btn", posts: posts %>
                    </span>
                  </p>
                </div>
                <%= image_tag posts.get_image(250,250), class: "card-img-top" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>