<!--ユーザ側／ユーザ編集画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="title">
        <i class="fas fa-user-gear"></i>ユーザー情報を編集する
      </h2>
      <h4 class="title">
        <i class="fas fa-circle-user"></i>プロフィール
      </h4>
      <%= form_with model: @user, url: user_path do |f| %>
        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像" %><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "ユーザー名" %><br>
          <%= f.text_field :name, placeholder: "20字以内", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "ひとこと" %><br>
          <%= f.text_field :introduction, placeholder: "100字以内", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "変更する", class: 'btn btn-success' %>
        </div>
      <% end %>

      <h4 class="title">
        <i class="far fa-envelope"></i>メールアドレス
      </h4>
      <%= form_with model: @user, url: user_path do |f| %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.text_field :email, placeholder: "abc@stechao.com", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "変更する", class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
