<!--ユーザ側／ユーザ編集画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="title">
        <i class="fas fa-user-gear"></i>ユーザー情報を編集する
      </h2>
      <h4 class="title">
        <i class="fas fa-circle-user"></i>プロフィールを変更する
      </h4>
      <%= form_with model: @user, url: user_path do |f| %>
        <div class="form-group">
          <%= f.label :image, "プロフィール画像" %><br>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "ユーザー名" %><br>
          <%= f.text_field :name, placeholder: "20字以内", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "ひとこと" %><br>
          <%= f.text_field :caption, placeholder: "100字以内", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :quantity, "数量" %><br>
          <div class="input-group">
            <%= f.number_field :quantity, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group text-center">
          <%= f.submit "変更する", class: 'btn btn-success' %>
        </div>
      <% end %>
      <h4 class="title">
        <i class="fas fa-gear"></i>ログイン情報を変更する
      </h4>
      <%= form_with model: @user, url: user_path do |f| %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.text_field :email, placeholder: "abc@stechao.com", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :encrypted_password, "パスワード" %><br>
          <%= f.text_field :encrypted_password, placeholder: "6字以上", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "変更する", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
