<!--users/profile（パーシャル）-->
<div id="users-profile-content-height" class="row justify-content-center align-items-center bg-light rounded-lg mb-5">

  <div class="col-sm-3 text-center">
    <%= image_tag user.get_profile_image(150,150), class: "rounded-circle shadow" %>
  </div>

  <div class="col-sm-7 p-4">
    <div class="row p-1 text-break">
      <h4><%= user.name %></h4>
    </div>
    <div class="row p-2 text-break border-bottom">
      <%= user.introduction %>
    </div>
    <div class="d-flex flex-row">
      <div class="text-center py-3">
        投稿した数　<%= posts.count %><br>
        断捨離した数　<%= posts.pluck(:quantity).sum %>
      </div>

    </div>
  </div>
</div>

<!--投稿を日付指定で絞り込む検索フォーム-->
<div class="text-left px-3 pb-3 mb-4">
  <p>◆投稿を日付で絞り込み検索</p>
  <%= form_with url: filter_by_date_posts_path, method: :get do |f| %>
    <div class="form-group">
      <div class="row text-right">
        <div class="">
          <%= f.select 'search_type', options_for_select([['投稿日', 'created_at'], ['最終更新日', 'updated_at']], params[:search_type]), {}, class: 'form-control' %>
        </div>
        <div class="col-sm-3">
          <%= f.date_field :start_date, value: params[:start_date], placeholder: "開始", class: "form-control" %>
        </div>
        <div class="d-flex justify-content-center align-items-center">
          <strong>～</strong>
        </div>
        <div class="col-sm-3">
          <%= f.date_field :end_date, value: params[:end_date], placeholder: "終了", class: "form-control" %>
        </div>
          <%= f.submit "検索", class: "btn btn-sm btn-success" %>
      </div>
    </div>
  <% end %>
</div>