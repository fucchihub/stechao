<% posts.post_comments.each do |post_comment| %>
<div class="row justify-content-center align-items-center mt-3">

  <div class="col-md-1">
  <%= image_tag post_comment.user.get_profile_image(50,50), class: "rounded-circle shadow" %>
  </div>
  <div class="col-md-2 text-break">
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><br>
  <%= post_comment.user.name %>
  </div>
  <div class="col-md-9 text-break">
  <%= post_comment.comment %><br>
  <% if post_comment.user == current_user %>
    <%= link_to "削除する", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "text-danger mt-3" %>
  <% end %>
  </div>
</div>
<% end %>

