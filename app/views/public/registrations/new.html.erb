<!--ユーザ側／新規登録画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>新規ユーザー登録</h2>

      <%= form_with model: @user, url: user_registration_path, method: :post do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :name, "ユーザー名" %><br>
          <%= f.email_field :name, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード(6字以上)" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録" class: "btn btn-success" %>
        </div>
      <% end %>

      <div>
        ログインは<%= link_to "こちら", new_user_session_path(resource_name) %>
      </div>

    </div>
  </div>
</div>
<%#= render "public/shared/links" %>
