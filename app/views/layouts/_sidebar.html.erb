            <i class="fas fa-images"></i> みんなの投稿
          <% end %>
        </li>
        <li>
          <%= link_to favorites_user_path(current_user) do %>
            <i class="fas fa-heart"></i> お気に入りリスト
          <% end %>
        </li>
        <li>
          <%= link_to users_path do %>
            <i class="fas fa-user-group"></i> ユーザーリスト
          <% end %>
        </li>
