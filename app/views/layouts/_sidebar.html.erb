        </li>
        <li>
          <%= link_to new_user_session_path do %>
              <i class="fas fa-right-to-bracket"></i> ログイン
          <% end %>
        </li>
        <li><%= link_to 'ゲストログイン（閲覧用）', public_users_guest_sign_in_path, method: :post %></li>
      <% end %>
    </ul>
  </nav>
