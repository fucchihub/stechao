<!--管理者側／全コメント一覧画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-8 px-sm-0 mx-auto">

      <h4 class="text-center mx-auto mb-4">コメントリスト</h4>

      <% @comments.each do |comment| %>
        <div class="index-table-row row justify-content-center align-items-center border-bottom py-4">
          <div class="col-md-1 d-flex justify-content-center align-items-center py-2">
            <%= comment.id %>
          </div>

          <div class="col-md-2 d-flex justify-content-center align-items-center py-2">
            <%= link_to admin_post_path(comment.post_id) do %>
              <%= image_tag comment.user.get_profile_image(80,80), class: "rounded-circle shadow" %>
            <% end %>
          </div>

          <div class="col-md-7 py-2">
            <%= link_to admin_post_path(comment.post_id) do %>
              <div class="row justify-content-center align-items-center text-break">
                <strong><%= comment.user.name.truncate(15) %></strong>
              </div>
              <div class="row justify-content-center align-items-center text-break">
                <%= comment.comment.truncate(15) %><br>
                <%= I18n.l(comment.created_at, format: :short) %>
              </div>
            <% end %>
          </div>

          <div class="col-md-2 d-flex justify-content-center align-items-center py-2">
            <%= link_to "削除", admin_post_comment_path(comment), method: :delete, data: { confirm: "このコメントを削除しますか？" }, class: " btn btn-sm btn-danger" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>