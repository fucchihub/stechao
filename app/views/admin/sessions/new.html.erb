<!--管理者側／ログイン画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-6 col-md-5 col-lg-4 px-5 px-sm-0 mx-auto">

      <div class="rounded-lg border p-3">
        <h5 class="mb-4">管理者ログイン</h5>
        <%= form_with model: resource, url: admin_session_path, method: :post do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :name, "名前" %><br>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード(6字以上)" %><br>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="form-group text-center">
            <%= f.submit "ログイン", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
