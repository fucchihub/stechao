<!--管理者側／全ユーザの一覧画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-12 col-lg-10 px-sm-0 mx-auto">

      <h4 class="text-center mx-auto mb-4">ユーザーリスト</h4>
      <table class="table table-hover">
        <thead class="table-active">
          <tr>
            <th>ID</th>
            <th></th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= image_tag user.get_profile_image(50,50), class: "rounded-circle" %></td>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= user.name.truncate(10) %>
                <% end %>
              </td>
              <td class="text-break"><%= user.email %></td>
              <td class="<%= user.is_active ? 'text-success' : 'text-muted' %>">
                <strong><%= user.is_active ? '有効' : '退会' %></strong>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>