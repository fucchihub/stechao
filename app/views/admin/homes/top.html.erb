<!--管理者側／投稿一覧画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-8 px-sm-0 mx-auto">

      <h4 class="text-center mx-auto mb-4">投稿リスト</h4>

      <% @posts.each do |post| %>
        <div class="index-table-row row justify-content-center align-items-center border-bottom py-4">
          <div class="col-md-1 d-flex justify-content-center align-items-center py-2">
            <%= post.id %>
          </div>

          <div class="col-md-2 d-flex justify-content-center align-items-center py-2">
            <%= link_to admin_post_path(post) do %>
              <%= image_tag post.get_image(80,80) %>
            <% end %>
          </div>

          <div class="col-md-7 py-2">
            <%= link_to admin_post_path(post) do %>
              <div class="row justify-content-center align-items-center text-break">
                <strong><%= post.name.truncate(15) %></strong>
              </div>
              <div class="row justify-content-center align-items-center">
                <i class="fas fa-comment"></i><%= post.post_comments.count %><br>
              </div>
              <div class="row justify-content-center align-items-center">
                <i class="fas fa-heart"></i><%= post.favorites.count %>
              </div>
            <% end %>
          </div>

          <div class="col-md-2 d-flex justify-content-center align-items-center py-2">
            <%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: "この投稿を削除しますか？" }, class: " btn btn-sm btn-danger" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>