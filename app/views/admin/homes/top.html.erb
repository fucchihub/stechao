<!--管理者側／投稿一覧画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto">

      <h2 class="mb-4">投稿リスト</h2>
      <table class="table table-hover">
        <thead class="table-active">
          <tr>
            <th>ID</th>
            <th></th>
            <th>投稿名</th>
            <th>コメント数</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |posts| %>
              <tr>
                <td><%= posts.id %></td>
                <td><%= image_tag posts.get_image(80,80) %></td>
                <td>
                  <%= link_to admin_post_path(posts) do %>
                    <%= posts.name.truncate(10) %>
                  <% end %>
                </td>
                <td><%= posts.post_comments.count %></td>
                <td>
                  <%= link_to "削除する", admin_post_path(posts), method: :delete, data: { confirm: "この投稿を削除しますか？" }, class: " btn btn-sm btn-danger" %>
                </td>
              </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>